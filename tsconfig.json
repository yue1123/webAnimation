{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
